<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sokalo.controller.AddItemDialogController">
   <children>
      <VBox layoutX="28.0" layoutY="18.0" prefHeight="362.0" prefWidth="545.0">
         <children>
            <Label text="Name Of Item" />
            <TextField fx:id="itemNameField" promptText="Name of the new Item" />
            <Label text="Barcode" />
            <TextField fx:id="barcodeField" promptText="XXXXXXXXX" />
            <Label text="Selling Price" />
            <TextField fx:id="priceField" promptText="0.00FCFA" />
            <Label text="Quantity" />
            <TextField fx:id="quantityField" promptText="Stock Quantity" />
            <Label text="Item Expiry Date" />
            <DatePicker fx:id="expiryDatePicker" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" text="Save" />
                  <Region prefHeight="100.0" prefWidth="157.0" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
