<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sokalo.controller.AboutUsController"
            stylesheets="@style.css"
            styleClass="root">
   <children>
      <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                  AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  style="-fx-background-color: transparent; -fx-background-insets: 0;">
         <content>
            <StackPane style="-fx-background-color: transparent;">
               <padding>
                  <Insets top="24.0" right="24.0" bottom="24.0" left="24.0" />
               </padding>
               <children>
                  <VBox alignment="CENTER" spacing="16.0" maxWidth="900.0" StackPane.alignment="CENTER"
                        style="-fx-background-color: -fx-dark-surface; -fx-background-radius: 16; -fx-padding: 24; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.35), 20, 0.2, 0, 6);">
                     <children>
                        <!-- Title (kept, now themed) -->
                        <Label text="SOKALO LOCAL" style="-fx-text-fill: -fx-primary; -fx-font-size: 28px; -fx-font-weight: bold;">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Label>

                        <!-- Accent divider -->
                        <Region minHeight="3.0" prefHeight="3.0" maxHeight="3.0" maxWidth="160.0"
                                style="-fx-background-color: -fx-primary; -fx-background-radius: 3;" />

                        <!-- Description (kept, now responsive and themed) -->
                        <Label wrapText="true" textAlignment="CENTER" maxWidth="860.0" prefWidth="860.0"
                               style="-fx-text-fill: -fx-dark-muted; -fx-font-size: 14px; -fx-line-spacing: 4px;"
                               text="SOKALO Desktop is the offline-first application built for stores to efficiently manage their daily operations without relying on constant internet access. It provides powerful tools for inventory tracking, sales processing (POS), staff accountability, and shift reconciliation. Data is stored locally and securely, with the option to sync to the SOKALO online platform whenever internet connectivity is available.  By combining simplicity with reliability, SOKALO Desktop ensures businesses can run smoothly in any environment. It empowers store managers to stay in control of stock, prevent losses, and monitor performance, while still being seamlessly connected to the wider SOKALO ecosystem when needed.">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </content>
      </ScrollPane>
   </children>
</AnchorPane>
