<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" 
         fx:controller="com.sokalo.controller.SystemLogController"
         stylesheets="@style.css">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16"/>
    </padding>
    <children>
        <VBox spacing="16">
            <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-background-color: -fx-dark-surface; -fx-padding: 16; -fx-background-radius: 12;">
                <children>
                    <Label text="Full System Log" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
                    <Region>
                        <HBox.hgrow>
                            <Priority fx:constant="ALWAYS"/>
                        </HBox.hgrow>
                    </Region>
                    <Button fx:id="printReportButton" mnemonicParsing="false" onAction="#handlePrintReportClick" text="Print Report" />
                </children>
            </HBox>
            <VBox spacing="16" style="-fx-background-color: -fx-dark-surface; -fx-padding: 16; -fx-background-radius: 12;" VBox.vgrow="ALWAYS">
                <TableView fx:id="logTableView" style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="actionColumn" text="Action" minWidth="100" prefWidth="150"/>
                        <TableColumn fx:id="detailsColumn" text="Details" minWidth="200" prefWidth="300"/>
                        <TableColumn fx:id="staffColumn" text="Staff Member" minWidth="150" prefWidth="200"/>
                        <TableColumn fx:id="timestampColumn" text="Timestamp" minWidth="150" prefWidth="200"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <VBox.vgrow>
                        <Priority fx:constant="ALWAYS"/>
                    </VBox.vgrow>
                </TableView>
            </VBox>
        </VBox>
    </children>
</StackPane>
