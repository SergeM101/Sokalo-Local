<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.TextAlignment?>

<StackPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" 
         fx:controller="com.sokalo.controller.SplashController"
         stylesheets="@style.css">
   <children>
      <VBox alignment="CENTER" spacing="24" maxWidth="600">
         <children>
            <ImageView fitHeight="172.0" fitWidth="335.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@logo.png" />
               </image>
            </ImageView>
            <Label contentDisplay="CENTER" prefHeight="38.0" prefWidth="491.0" text="SOKALO Desktop keeps your business running — manage stock, sales, and staff even without internet, with seamless sync when you’re back online." textAlignment="JUSTIFY" wrapText="true" />
            <Label fx:id="statusLabel" text="Label"/>
            <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" />
         </children>
      </VBox>
   </children>
</StackPane>
